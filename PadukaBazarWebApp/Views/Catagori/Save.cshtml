@using PadukaBazarWebApp.Models
@model PadukaBazarWebApp.Models.Catagory
@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Catagory> catagorieList = ViewBag.CatagoryList;
}

<h2>Save</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Catagori</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.CatagoryName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CatagoryName)
                @Html.ValidationMessageFor(model => model.CatagoryName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
            <h3>@ViewBag.Message</h3>
        </div>
    </div>
    <div>
        <fieldset>
            <legend>View All Catagory</legend>


            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Sreial No</th>
                        <th>CatagoryName</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var catagori in catagorieList)
                    {
                        <tr>
                            <td>@catagori.Id</td>
                            <td>@catagori.CatagoryName</td>
                        </tr>
                    }
                </tbody>
            </table>

        </fieldset>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
